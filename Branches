    private void jbAceptarSActionPerformed(java.awt.event.ActionEvent evt) {                                           
        if(jpContrasenaAdminS.getText().equals("Admin") || !jtUsuarioS.getText().equals("") || !jpContrasenaS.getText().equals("")){
            Clases.Archivo conexionC = new Clases.Archivo();
            conexionC.GrabarU(jtUsuarioS.getText() + "%" + jpContrasenaS.getText());
            JOptionPane.showMessageDialog(null, "USUARIO REGISTRADO CON EXITO"); 
            this.dispose();
            LogIn L = new LogIn();
            L.setVisible(true);
            
        }else{
           JOptionPane.showMessageDialog(null, "CONTRASEÑA INCORRECTA"); 
        }
    }                                          

