    public GestionCitas() {
        initComponents();
        citas = new ArrayList();
        modeloc = new DefaultTableModel();
        
        modeloc.addColumn("CODIGO");
        modeloc.addColumn("PacienteID");
        modeloc.addColumn("Especialidad");
        modeloc.addColumn("DoctorID");
        modeloc.addColumn("Fecha");
        modeloc.addColumn("Hora");
        
        mostrarDatosc();
    }

    public void mostrarDatosc(){
        modeloc.setNumRows(citas.size());
        for(int i =0; i<citas.size(); i++){
            modeloc.setValueAt(citas.get(i).getCodigo(), i, 0);
            modeloc.setValueAt(citas.get(i).getPacienteID(), i, 1);
            modeloc.setValueAt(citas.get(i).getEspecialidadC(), i, 2);
            modeloc.setValueAt(citas.get(i).getDoctorID(), i, 3);
            modeloc.setValueAt(citas.get(i).getFechaC(), i, 4);
            modeloc.setValueAt(citas.get(i).getHorarioC(), i, 5);
        }
        jtDatosC.setModel(modeloc);
    }
