    private void jbRegresarCActionPerformed(java.awt.event.ActionEvent evt) {                                            
        this.dispose();
        VistaGeneral vg = new VistaGeneral();
        vg.setVisible(true);
    }                                           

    private void jbAnadirCActionPerformed(java.awt.event.ActionEvent evt) {                                          
        if(!jtPacienteIDC.getText().equals("")||!jtEspecialidadC.getText().equals("")||!jtDoctorIDC.getText().equals("")||!jtFechaC.getText().equals("")||!jtHoraC.getText().equals("")){
            Citas c = new Citas();
            c.setCodigo(codigo);
            codigo++;
            c.setPacienteID(jtPacienteIDC.getText());
            c.setEspecialidadC(jtEspecialidadC.getText());
            c.setDoctorID(jtDoctorIDC.getText());
            c.setFechaC(jtFechaC.getText());
            c.setHorarioC(jtHoraC.getText());
            citas.add(c);
            jtPacienteIDC.setText("");
            jtEspecialidadC.setText("");
            jtDoctorIDC.setText("");
            jtFechaC.setText("");
            jtHoraC.setText("");
            mostrarDatosc();
        }else{
            JOptionPane.showMessageDialog(null, "INGRESE LOS DATOS SOLICITADOS");
        }
    }                                         

    private void jbEliminarCActionPerformed(java.awt.event.ActionEvent evt) {                                            
        if (jtDatosC.getSelectedRow() < 0){
            JOptionPane.showMessageDialog(null, "SELECCIONE EL REGISTRO A ELIMINAR"); 
        }else{
           citas.remove(jtDatosC.getSelectedRow());
           mostrarDatosc();
        }
    }                                           

    private void jbGuardarCActionPerformed(java.awt.event.ActionEvent evt) {                                           
        if(jtPacienteIDC.getText().equals("")||jtEspecialidadC.getText().equals("")||jtDoctorIDC.getText().equals("")||jtFechaC.getText().equals("")||jtHoraC.getText().equals("")){
           JOptionPane.showMessageDialog(null, "INGRESE LOS DATOS SOLICITADOS"); 
        }else{
            Archivo conexionC = new Archivo();
        conexionC.GrabarC(jtPacienteIDC.getText() + "%" + jtEspecialidadC.getText() + "%" + jtDoctorIDC.getText() + "%" + jtFechaC.getText() + "%" + jtHoraC.getText());
        JOptionPane.showMessageDialog(null, "GUARDADO CON EXITO");
        jtPacienteIDC.setText("");
        jtEspecialidadC.setText("");
        jtDoctorIDC.setText("");
        jtFechaC.setText("");
        jtHoraC.setText("");
        }
    }                                          

    private void jbEditarCActionPerformed(java.awt.event.ActionEvent evt) {                                          
        if (jtDatosC.getSelectedRow() < 0){
           JOptionPane.showMessageDialog(null, "SELECCIONE EL REGISTRO A MODIFICAR"); 
        }else{
         this.dispose();
         EditorCitas ec = new EditorCitas(citas.get(jtDatosC.getSelectedRow()),this);
         ec.setVisible(true);
        }
    }                                         

